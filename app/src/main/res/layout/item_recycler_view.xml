<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#DEE4E4"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/earningImage"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_receive_cash" />

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/earningImage"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text="Salary" />

                <TextView
                    android:id="@+id/subTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000000"
                    tools:text="Got new shirts and shorts" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/otherDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/detailsLayout"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/costTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text="+$750" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="#000000"
                    tools:text="2020-12-7" />

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>